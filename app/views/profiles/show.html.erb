<div class="container portfolio-container">
    <div class="row">
        <div class="col-md-7">
            <%= image_tag profile_img(@profile_item.thumb_image.url,'main')%>  
        </div>
        <div class="col-md-5">
            <h1><%= @profile_item.title %></h1>
            <hr>
            <em><%= @profile_item.subtitle %></em>
            <p><%= @profile_item.body %></p>
            <hr>
            <h2>Technologies Used:</h2>
            <% @profile_item.technologies.each do |t|%>
                <p><%= t.name %></p>
            <% end %>
        </div>
    </div>
</div>
