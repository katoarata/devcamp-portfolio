<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title%></title>
    <meta name="keywords" content=<%= @seo_keywords%>>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'profiles', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div>
      <div><%= link_to "Home", root_path %> </div>
      <div><%= link_to "About", about_me_path %> </div>
      <div><%= link_to "Contact", contact_path %> </div>
      <div><%= link_to "Blog", blogs_path%></div>
      <div><%= link_to "Profile", blogs_path%></div>
    </div>
      <% if current_user.is_a?(GuestUser) %>
      <%= link_to "register", new_user_registration_path%>
      <%= link_to "login", new_user_session_path%>
      <% else %>
      <%= link_to "logout", destroy_user_session_path, method: :delete %>
    <%end%>
    
    <%= yield %>
    <% if session[:source]%>
      <p>thanks for visiting me from <%= session[:source]%></p>
    <%end%>
  </body>
</html>
